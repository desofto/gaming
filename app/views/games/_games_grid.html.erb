<% index = 0 %>
<%= grid( @games_grid, show_filters: :no, allow_showing_all_records: false ) do |g|
  g.blank_slate  do
    content_tag :div, "No records found", class: 'well wice-grid-container', id: 'frmGames'
  end
  
  g.column  name: '#', html: { width: '5%' } do |game|
    index += 1
  end

  g.column  name: 'Name', attribute: 'name', html: { width: '70%' } do |game|
    link_to game.name, game
  end

  g.column  name: 'Status', attribute: 'status', html: { width: '15%' } do |game|
    game.status_title
  end
  
  g.column  name: '', html: { width: '10%', style: 'text-align: center;' } do |game|
    button_tag "Delete", "data-game-id" => game.id.to_s, :class => "btn btn-mini btn-default delete"
  end
end -%>