<% provide( :title, 'Games' ) %>
<div class="row">
  <div class="span12">
    <h3>Games</h3>
  </div>
</div>

<div class="row" style="margin-bottom: 12px;">
  <div class="span12">
    <div class="btn-group pull-left">
      <button type="button" class="btn btn-default btn-primary" id="games-search-filter-all">
        Все
      </button>
      <button type="button" class="btn btn-default" id="games-search-filter-active">
        Активные
      </button>
      <button type="button" class="btn btn-default" id="games-search-filter-deleted">
        Удаленные
      </button>
    </div>
    <div class="pull-right">
      <button type="button" class="btn btn-default btn-primary" id="games-game-create">
        <span class="glyphicon glyphicon-plus"></span>+ Создать
      </button>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="games">
      <% index = 0 %>
      <%= grid( @games_grid, show_filters: :no, allow_showing_all_records: false ) do |g|
        #g.blank_slate  do
        #  content_tag :div, "No records found", class: 'well'
        #end
        
        g.column  name: '#', html: { width: '5%' } do |game|
          index += 1
        end

        g.column  name: 'Название', attribute: 'name', html: { width: '70%' } do |game|
          link_to game.name, game
        end

        g.column  name: 'Статус', attribute: 'status', html: { width: '15%' } do |game|
          game.status_title
        end
        
        g.column  name: '', html: { width: '10%', style: 'text-align: center;' } do |game|
          button_tag "Delete", "data-game-id" => game.id.to_s, :class => "btn btn-mini btn-default delete"
        end
      end -%>
    </div>
  </div>
</div>

<div class="modal fade" id="dlgGameCreate">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Создание игры</h4>
      </div>
      <div class="modal-body">
        <% @game = Game.new %>
        <%= form_for(@game) do |f| %>
          <%= f.label :name, "Название игры:" %>
          <%= f.text_field :name, errorCss: 'error' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="javascript: $.gaming.dlgGameCreate.ok();">Create</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="dlgGameDelete">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Удаление игры</h4>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="javascript: $.gaming.dlgGameDelete.ok();">Delete</button>
      </div>
    </div>
  </div>
</div>
